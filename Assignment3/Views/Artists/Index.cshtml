@model IEnumerable<Assignment3.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistHometown)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistHometown)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArtistID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArtistID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArtistID })
        </td>
    </tr>
}

</table>

<br/>

<h2>Click Artist to view Albums</h2>
<ul>
    @foreach(var item in Model)
    {
        <li>
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#@item.ArtistID">
                @Html.DisplayFor(model => item.ArtistName)
            </button>
            <div id="@item.ArtistID" class="collapse">
                @foreach(var album in item.Albums)
                {
                    @album.AlbumName <br />
                }
            </div>
        </li>
    }
</ul>

